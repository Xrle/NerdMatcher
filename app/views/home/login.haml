#wrapper
  =render 'partials/header'
  .section
    .container.has-text-centered
      %p.title= t('home.login')
    .container
      =form_with do |form|
        .field
          =form.label :username
          .control
            =form.text_field :username, class: 'input'
        .field
          =form.label :password
          .control
            =form.text_field :password, class: 'input'
        .field
          .control
            =form.submit t('home.login'), class: 'button is-link'

=render 'partials/footer'
