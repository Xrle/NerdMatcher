=render 'partials/header'

.container
  =form_with do |form|
    .form-group
      =form.label :name
      =form.text_field :name, class: 'form-control'
    .form-group
      =form.label :password
      =form.text_field :password, class: 'form-control'
    =form.submit t('home.login'), class: 'btn btn-primary'

