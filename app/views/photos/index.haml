#wrapper
  =render 'partials/header'
  .section
    .container.has-text-centered
      %p.title= t('.title')
      %p.subtitle= t('.subtitle')
      =link_to t('.upload'), '/profile/photos/upload', class: 'button is-link'
  .section
    .container
      -#Display photos in a grid with 3 columns
      -until @photos == []
        .tile.is-ancestor
          -for i in 1..3
            -photo = @photos.shift
            -if photo != nil
              .tile.is-parent
                .tile.is-child
                  =render 'photo_card', photo: photo
            -else
              .tile.is-parent
                .tile.is-child




=render 'partials/footer'