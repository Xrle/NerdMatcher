#wrapper
  =render 'partials/header'
  .section
    .container.has-text-centered.block
      %p.title
        =@user.name
        =link_to 'Back', '/matches', class: 'button is-link'
    .container.chat-container.block
      %iframe.chat-window{src: "/chat/show_messages?id=#{params[:id]}"}
    .container
      =form_with url: "/chat?id=#{@user.id}", html: {:id => "chat-box"} do |f|
        .field.has-addons
          .control.is-expanded
            =f.text_field :message, class: 'input'
          .control
            =f.submit 'Send', class: 'button is-link'

=render 'partials/footer'