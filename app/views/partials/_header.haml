-# %h2= title if defined?(title)
%nav{:class => 'navbar navbar-expand-lg'}
  -# Title
  =link_to t('app_title'), '/', class: 'navbar-brand'
  -if session[:userid] == nil
    -# Different navbar if not logged in
    =link_to 'Log In', '/login', class: 'nav-link active'
    =link_to 'Sign Up', '/signup', class: 'nav-link active'
  -else
    -# Navbar for the rest of the app
    =link_to 'Explore', '/explore', class: 'nav-link active'
    =link_to 'Log Out', '/logout', class: 'nav-link active'

=render 'partials/notify'

